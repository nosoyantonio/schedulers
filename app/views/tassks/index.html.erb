<style>
.font
{
  font-family: monospace;
  color: white;
}
td 
    {
        border: 0px solid black;
        background-color: #16A085;
        height: 60px;
        border-radius: 5px;
        padding: 9px;
    }
.espace
    {
      width: 350px;
    }
a
{
  text-decoration: none;
  color: black;
}
</style>
<p id="notice"><%= notice %></p>

<div>
<table width="100%">
<td>
<center><h1><div class="font">Tasks</div></h1></center>
</td>
</table>
</div>
<p></p>
<center>

  <tbody>
    <% @tassks.each do |tassk| %>
      <tr>
      <h4>Name:</h4>
        <td><h5><%= tassk.name %></h5></td>
        <br>
        <h4>Description:</h4>
        <td><h5><%= tassk.description %></h5></td>
        <br>
        <h4>Code:</h4>
        <td><h5><%= tassk.code %></h5></td>
        <br>
        <h4>Due Date:</h4>
        <td><h5><%= tassk.due_date %></h5></td>
        <br>
        
        <td><%= link_to 'Show', tassk %></td>
        <td><%= link_to 'Edit', edit_tassk_path(tassk) %></td>
        <td><%= link_to 'Destroy', tassk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
        <br>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tassk', new_tassk_path %>
